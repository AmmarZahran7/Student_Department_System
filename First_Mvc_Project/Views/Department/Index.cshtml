@model IEnumerable<Department>
@{
    ViewBag.Title = "Dept list";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <a href="/Department/Create" class="btn btn-info"> create<span class="badge bg-danger">@Model.Count()</span> </a>|

    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Operation</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DeptId</td>
                    <td>@item.DeptName</td>
                    <td>@item.Address</td>
                    <td>
                        <a href="/Department/Details/@item.DeptId" class="btn btn-primary">Details</a>
                        <a href="/Department/Delete/@item.DeptId" onclick="return confirm('Are You Sure')" class="btn btn-danger">Delete</a>
                        <a href="/Department/Update/@item.DeptId" class="btn btn-info">Update</a>


                    </td>


                </tr>

            }
        </tbody>
    </table>
</body>
</html>
