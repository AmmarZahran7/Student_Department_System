@model IEnumerable<Student>
@{
    ViewBag.Title = "Student List";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    
</head>
<body>
   <a href="/Students/Create" class="btn btn-info"> create<span class="badge bg-danger">@Model.Count()</span> </a>|

    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>DeptName</th>
                <th>Address</th>
                <th>Age</th>
                <th>Operation</th>

            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Department.DeptName</td>
                    <td>@item.Address</td>
                    <td>@item.Age</td>
                    <td>
                        <a href="/Students/Details/@item.Id" class="btn btn-primary">Details</a>
                        <a href="/Students/Delete/@item.Id" onclick="return confirm('Are You Sure')" class="btn btn-danger">Delete</a>
                        <a href="/Students/Update/@item.Id"  class="btn btn-info">Update</a>


                    </td>


                </tr>

            }
        </tbody>
    </table>
</body>
</html>
